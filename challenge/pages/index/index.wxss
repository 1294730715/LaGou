.page {
    width: 100%;
    box-sizing: border-box;
}
.container {
    
    width: 100%;
}
.job-hd {
    background-color: #2aca97;
    width: 100%;
    height: 360rpx;
}
.logo {
    width: 100%;
    height: 150rpx;
    text-align: center;
    padding-top: 30rpx;

}
.logo-pic {
    width: 230rpx;
    height: 120rpx;  
}
.job-search {
    /* background-color: red; */
    height: 210rpx;
    width: 100%;
    z-index: 2;
    padding-top: 18rpx;
    position: relative;
}
.job-search-input {
    width: 650rpx;
    text-align: center;
    display: inline-block;
    height: 80rpx;
    background-color: #fff;
    margin-left: 50rpx;
    font-size: 30rpx;
    color: #fbfbfb;
    border-radius: 50rpx;
    
}
.job-search-pic{
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    z-index: 3;
    left: 230rpx;
    top: 35rpx;
}
.job-recommend {
    width: 100%;
    height: 80rpx;
    /* background-color: red; */
    text-align: center;
    padding-top: 50rpx;
    font-size: 40rpx;
    color: #6d6d6d;
    position: relative;
}
.job-recommend:before {
    position: absolute;
    content: '';
    left: 70rpx;
    top: 75rpx;
    width: 100rpx;
    height: 1rpx;
    background-color: #dcdcdc;
}
.job-recommend:after {
    position: absolute;
    content: '';
    right: 70rpx;
    top: 75rpx;
    width: 100rpx;
    height: 1rpx;
    background-color: #dcdcdc;
}